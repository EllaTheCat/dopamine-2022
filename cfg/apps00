    ["f6"]="firefox"
    #! ws 1 of 10 instances of this browser.
    ["f7"]="firefox"
    #! ws 1 of 10 instances of this browser.
    ["f8"]="firefox"
    #! ws 1 of 10 instances of this browser.
    ["f9"]="firefox"
    #! ws 1 of 10 instances of this browser.
    ["g0"]="google-chrome"
    #! ws 1 of 10 instances of this browser.
    ["g1"]="google-chrome"
